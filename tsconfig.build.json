{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["es2015", "es2016", "dom"],
    "jsx": "preserve",
    "declaration": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"]
    }
